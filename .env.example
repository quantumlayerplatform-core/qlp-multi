# QLP Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Keys (Required)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database
DATABASE_URL=postgresql+asyncpg://qlp:qlp@localhost:5432/qlp
REDIS_URL=redis://localhost:6379/0

# Temporal
TEMPORAL_SERVER=localhost:7233
TEMPORAL_NAMESPACE=default

# Vector Databases
QDRANT_URL=http://localhost:6333
WEAVIATE_URL=http://localhost:8080

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Service URLs
ORCHESTRATOR_URL=http://localhost:8000
AGENT_FACTORY_URL=http://localhost:8001
VALIDATION_MESH_URL=http://localhost:8002
VECTOR_MEMORY_URL=http://localhost:8003
SANDBOX_SERVICE_URL=http://localhost:8004

# Security
SECRET_KEY=development-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=/tmp/qlp-storage

# Docker
DOCKER_REGISTRY=localhost:5000
DOCKER_IMAGE_PREFIX=qlp

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Feature Flags
FEATURE_ADVANCED_VALIDATION=true
FEATURE_AUTO_SCALING=false
FEATURE_SEMANTIC_SEARCH=true
FEATURE_CHAOS_TESTING=false
