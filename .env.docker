# Docker Environment Variables for QLP Platform

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# OpenAI Configuration (fallback)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Groq Configuration
GROQ_API_KEY=your-groq-api-key

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=qlp_user
POSTGRES_PASSWORD=qlp_password
POSTGRES_DB=qlp_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Temporal Configuration
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233

# Service URLs (internal Docker network)
ORCHESTRATOR_URL=http://orchestrator:8000
AGENT_FACTORY_URL=http://agent-factory:8001
VALIDATION_MESH_URL=http://validation-mesh:8002
VECTOR_MEMORY_URL=http://vector-memory:8003
EXECUTION_SANDBOX_URL=http://execution-sandbox:8004

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Azure Storage (for capsule delivery)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=qlp-capsules

# AWS S3 (for capsule delivery)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=qlp-capsules

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_ORG=your-org

# Performance
WORKERS=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=300